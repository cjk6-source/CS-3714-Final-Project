<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GasFinder">
    <!--android:background="#3bc8ff" (put this in to change background color)-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:weightSum="3">

            <Button
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:id="@+id/toHistory"
                android:text="My Gas History"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="onClickHistory"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:id="@+id/toLogger"
                android:text="Log this\nFill-Up"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="onClickLog"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:id="@+id/toMap"
                android:text="View Map"
                android:textSize="25sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:onClick="onClickMap"/>


        </LinearLayout>

        <Button
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/toList"
            android:text="Gas Near Me"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:onClick="onClickList"/>

    </LinearLayout>

</RelativeLayout>
